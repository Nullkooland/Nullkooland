@using Nullkooland.Client.Services.Markdown
@inject MarkdownRenderService RenderService

@Components

@code {
    [EditorRequired]
    [Parameter]
    public string? Content { get; set; }

    [EditorRequired]
    [Parameter]
    public string? BaseUrl { get; set; }

    private RenderFragment? Components { get; set; }

    protected override void OnParametersSet()
    {
        Components = RenderService.Render(Content!, BaseUrl);
    }

}